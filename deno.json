{
  "name": "@mage/app",
  "version": "0.8.3",
  "license": "MIT",
  "publish": {
    "include": [
      "app/",
      "body-size/",
      "cache-control/",
      "compression/",
      "cookies/",
      "cors/",
      "csrf/",
      "csp/",
      "linear-router/",
      "logs/",
      "pages/",
      "rate-limit/",
      "request-id/",
      "security-headers/",
      "serve-files/",
      "status/",
      "timeout/",
      "validate/",
      "type-utils/",
      "deno.json",
      "README.md",
      "LICENSE"
    ],
    "exclude": ["**/tests/**", "**/*.test.ts"]
  },
  "exports": {
    ".": "./app/mod.ts",
    "./body-size": "./body-size/mod.ts",
    "./cache-control": "./cache-control/mod.ts",
    "./compression": "./compression/mod.ts",
    "./cookies": "./cookies/mod.ts",
    "./cors": "./cors/mod.ts",
    "./csrf": "./csrf/mod.ts",
    "./csp": "./csp/mod.ts",
    "./linear-router": "./linear-router/mod.ts",
    "./logs": "./logs/mod.ts",
    "./pages": "./pages/mod.ts",
    "./rate-limit": "./rate-limit/mod.ts",
    "./request-id": "./request-id/mod.ts",
    "./security-headers": "./security-headers/mod.ts",
    "./serve-files": "./serve-files/mod.ts",
    "./status": "./status/mod.ts",
    "./timeout": "./timeout/mod.ts",
    "./validate": "./validate/mod.ts"
  },
  "tasks": {
    "test": "deno test --allow-all --clean --coverage",
    "coverage": "deno coverage coverage --exclude='.*/T/.*' --exclude='.*/tests/fixtures/.*'",
    "lint": "deno lint",
    "format": "deno fmt",
    "check": "deno check .",
    "docs:dev": "deno run --allow-all docs/dev.ts",
    "docs:build": "deno run --allow-read --allow-write --allow-env docs/build.ts",
    "docs:serve": "deno run --allow-read --allow-net --allow-env docs/serve.ts"
  },
  "imports": {
    "@deno/gfm": "jsr:@deno/gfm@^0.11.0",
    "@standard-schema/spec": "jsr:@standard-schema/spec@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@std/async": "jsr:@std/async@^1.0.10",
    "@std/cache": "jsr:@std/cache@^0.1.3",
    "@std/cli": "jsr:@std/cli@^1.0.13",
    "@std/crypto": "jsr:@std/crypto@^1.0.5",
    "@std/encoding": "jsr:@std/encoding@^1.0.9",
    "@std/expect": "jsr:@std/expect@^1.0.13",
    "@std/fs": "jsr:@std/fs@^1.0.11",
    "@std/http": "jsr:@std/http@^1.0.13",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/testing": "jsr:@std/testing@^1.0.9",
    "@std/yaml": "jsr:@std/yaml@^1.0.10",
    "esbuild": "npm:esbuild@^0.24.2",
    "preact": "npm:preact@^10.24.3",
    "preact-render-to-string": "npm:preact-render-to-string@^6.5.11",
    "zod": "npm:zod@^3.24.1"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
